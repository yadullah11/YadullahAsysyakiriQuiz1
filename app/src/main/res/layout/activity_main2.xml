<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/tvstore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6750A3"
        android:padding="16dp"
        android:text="AppMob Store "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvNamaPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="Selamat Datang "
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tvTipePelanggan"
        android:text="Tipe Pelanggan:"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Transaksi Hari Ini"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tvKodeBarang"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Barang :"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tvNamaBarang"
        android:text="Nama Barang :"
        android:layout_marginLeft="16dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvHarga"
        android:text="Harga :"
        android:layout_marginLeft="16dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga :"
        android:layout_marginLeft="16dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tvDiskonHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Harga :"
        android:layout_marginLeft="16dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tvDiskonMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Member :"
        android:layout_marginLeft="16dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tvJumlahBayar"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Bayar :"
        android:textSize="16dp"/>

    <TextView
        android:text="Terimakasih telah berbelanja disini!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>
